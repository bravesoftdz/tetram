    Script.Add('ALTER PROCEDURE PREVISIONS_SORTIES (');
    Script.Add('    withachat smallint,');
    Script.Add('    in_id_serie char(38))');
    Script.Add('returns (');
    Script.Add('    id_serie char(38),');
    Script.Add('    titreserie varchar(150),');
