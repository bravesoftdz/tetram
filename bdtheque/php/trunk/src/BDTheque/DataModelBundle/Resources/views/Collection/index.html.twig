{% extends "BDThequeDataModelBundle::main.layout.html.twig" %}

{% block contentPanel %}
<h1>Collection list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Version</th>
            <th>Created</th>
            <th>Nomcollection</th>
            <th>Initiale</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
            <tr>
                <td><a href="{{ path('collection_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.version %}{{ entity.version|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nomCollection }}</td>
                <td>{{ entity.initiale }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('collection_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('collection_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('collection_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
