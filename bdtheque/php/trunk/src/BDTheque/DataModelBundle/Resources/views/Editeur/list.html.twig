{% extends "BDThequeDataModelBundle::main.layout.html.twig" %}

{% block contentPanel %}
<h1>Editeur list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nomediteur</th>
            <th>Siteweb</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
            <tr>
                <td><a href="{{ path('editeur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomEditeur }}</td>
                <td>{{ entity.siteWeb }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('editeur_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('editeur_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('editeur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
