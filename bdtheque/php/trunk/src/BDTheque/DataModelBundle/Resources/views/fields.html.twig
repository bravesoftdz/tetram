{% extends 'form_div_layout.html.twig' %}

{% block form_label %}
    {{ parent() }}
    {% if required %}
<span class="required" title="This field is required">*</span>
    {% endif %}
{% endblock %}

{% block form_widget_simple %}
    {{ parent() }}

    {% if help is defined %}
<span class="help">{{ help }}</span>
    {% endif %}
{% endblock %}