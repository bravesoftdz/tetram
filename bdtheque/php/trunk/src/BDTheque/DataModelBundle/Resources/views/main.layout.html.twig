                <img src="{{ asset_url }}" valign="center">
{% endimage %}
                &nbsp;Chargement des données...
            </div>
            <div id=toolBar>{% block toolBar %}{% endblock %}</div>
            <div id=statusBar>{% block statusBar %}{% endblock %}</div>
            <div id=leftPanel>{% block leftPanel %}{% endblock %}</div>
            <div id=editPanel>{% block editPanel %}{% endblock %}</div>
            <div id=contentPanel>{% block contentPanel %}{% endblock %}</div>
{% block extra_footer %}{% endblock %}
        </body>
