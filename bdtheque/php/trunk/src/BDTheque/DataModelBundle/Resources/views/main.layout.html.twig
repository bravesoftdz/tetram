<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}BDThèque{% endblock %}</title>
{% javascripts 
    '@BDThequeDataModelBundle/Resources/public/js/*.min.js'
    '@BDThequeDataModelBundle/Resources/public/*.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% stylesheets filter='cssrewrite'
    'bundles/bdthequedatamodel/css/pepper-grinder/*.min.css' 
    'bundles/bdthequedatamodel/css/*.css' %}
