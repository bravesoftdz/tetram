<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="BDTKBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="BDTKTheme" parent="BDTKBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="sdlDialogStyle">@style/DialogStyleLight.Custom</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">#FF555555</item>
        <!--
                <item name="android:background">@drawable/custom_tab_indicator</item>
                <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
                <item name="android:textSize">16sp</item>
                <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
                <item name="android:dividerPadding">10dp</item>
                <item name="android:showDividers">middle</item>
                <item name="android:paddingLeft">8dp</item>
                <item name="android:paddingRight">8dp</item>
                <item name="android:fadingEdge">horizontal</item>
                <item name="android:fadingEdgeLength">8dp</item>
        -->
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <!--
            <item name="android:typeface">monospace</item>
        -->
        <item name="android:textColor">#336699</item>
    </style>

    <style name="CustomRatingBar" parent="android:Widget.DeviceDefault.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="fiche_consultation" parent="android:Theme.Holo.Light">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="fiche_label" parent="android:TextAppearance.Medium">
        <item name="android:textColor">#336699</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="DialogStyleLight.Custom">
        <!-- anything can be left out: -->
